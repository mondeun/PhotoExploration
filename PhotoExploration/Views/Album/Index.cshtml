@model IEnumerable<PhotoExploration.Models.AlbumViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="container">
    <div class="col-sm-12">
        <h3>@Html.ActionLink("New Album", "Create", "Album", new { area = "" }, new { @class = "caption" })</h3>
    </div>
    <div class="row">
        @foreach (var album in Model)
        {
            <div class="col-sm-3">
                <h3>@Html.ActionLink(album.Name, "Details", "Album", new { id = album.Id }, new { @class = "thumbnail" })</h3>
            </div>
        }
    </div>
</div>