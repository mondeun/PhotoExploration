@model IEnumerable<PhotoExploration.Models.Photo>

@{
    ViewBag.Title = "Index";
}

<h2>Gallery</h2>

<div class="container">
    <div class="row">
        @foreach (var photo in Model)
        {
            <div class="col-sm-3">
                <a href="@string.Format($"/Gallery/Show/{photo.Id}")" class="thumbnail">
                    <img src="~/Photos/@photo.Path" alt="@photo.Title">
                </a>
            </div>
        }
    </div>
</div>